<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_line_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_4"
    android:layout_marginEnd="@dimen/dp_8"
    android:layout_marginStart="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_4"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/itemBusName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:textColor="@color/color_primary_text"
            android:textSize="@dimen/text_headline"
            tools:text="211路" />

        <TextView
            android:id="@+id/itemBusGPSStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemBusName"
            android:layout_marginStart="@dimen/dp_16"
            android:textSize="@dimen/text_subtitle"
            tools:text="当前位置：福前小区东门" />

        <TextView
            android:id="@+id/itemBusGPSTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/itemBusName"
            android:layout_marginEnd="@dimen/dp_8"
            android:textSize="@dimen/text_subtitle"
            tools:text="14:37:30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemBusGPSTime"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:clickable="true"
            android:paddingBottom="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_8"
            android:paddingStart="@dimen/dp_8"
            android:paddingTop="@dimen/dp_4"
            android:text="@string/text_more"
            android:textColor="@color/color_light_blue_300"
            android:textSize="@dimen/text_subtitle" />

    </RelativeLayout>

</android.support.v7.widget.CardView>