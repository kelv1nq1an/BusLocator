<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_line_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin4"
    android:layout_marginEnd="@dimen/margin8"
    android:layout_marginStart="@dimen/margin8"
    android:layout_marginTop="@dimen/margin4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin8">

        <TextView
            android:id="@+id/itemBusName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin8"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_title"
            tools:text="211路" />

        <TextView
            android:id="@+id/itemBusGPSStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemBusName"
            android:textSize="@dimen/text_body"
            tools:text="当前位置：福前小区东门" />

        <TextView
            android:id="@+id/itemBusGPSTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/itemBusGPSStation"
            android:textSize="@dimen/text_body"
            tools:text="14:37:30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemBusGPSTime"
            android:layout_marginTop="@dimen/margin8"
            android:clickable="true"
            android:paddingBottom="@dimen/padding4"
            android:paddingEnd="@dimen/padding8"
            android:paddingStart="@dimen/padding8"
            android:paddingTop="@dimen/padding4"
            android:text="@string/text_more"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_subtitle" />

    </RelativeLayout>

</android.support.v7.widget.CardView>