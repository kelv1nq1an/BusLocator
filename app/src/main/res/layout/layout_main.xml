<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/mainViewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/mainConstraintLayout"
        app:layout_constraintBottom_toTopOf="@+id/mainNavigationTabBar" />

    <com.gigamole.navigationtabbar.ntb.NavigationTabBar
        android:id="@+id/mainNavigationTabBar"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        app:layout_constraintLeft_toLeftOf="@+id/mainConstraintLayout"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/mainConstraintLayout"
        tools:layout_constraintBottom_creator="1" />

</android.support.constraint.ConstraintLayout>
