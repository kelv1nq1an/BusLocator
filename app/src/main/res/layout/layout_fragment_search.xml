<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bg_search" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_search_floating_line_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_search_bar_height" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/fragment_search_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:indicator="LineSpinFadeLoader"
        app:indicator_color="@color/red_200" />

    <com.arlib.floatingsearchview.FloatingSearchView
        android:id="@+id/fragment_search_floating_search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:floatingSearch_leftActionMode="showSearch"
        app:floatingSearch_searchBarMarginLeft="@dimen/dp_8"
        app:floatingSearch_searchBarMarginRight="@dimen/dp_8"
        app:floatingSearch_searchBarMarginTop="@dimen/dp_4"
        app:floatingSearch_searchHint="@string/string_search_hint" />
</RelativeLayout>